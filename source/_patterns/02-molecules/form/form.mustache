<form>
<h2>Billing Information</h2>
<div class="wrapped-fields">
<div class="one-field">
    <label for="firstName" class="required">First Name</label>
    <input type="text" id="firstName"/>
</div>
<div class="one-field">
    <label for="lastName" class="required">Last Name</label>
    <input type="text" id="lastName"/>
</div>
</div>
<div class="wrapped-fields">
<div class="one-field">
    <label for="street1" class="required">Street 1</label>
    <input type="text" id="street1"/>
</div>
<div class="one-field">
    <label for="street2">Street 2</label>
    <input type="text" id="street2"/>
</div>
</div>
<div class="wrapped-fields">
<div class="one-field">
    <label for="city" class="required">City</label>
    <input type="text" id="city"/>
</div>
<div class="one-field">
    <label for="zip" class="required">ZIP/Postal Code</label>
    <input type="tel" id="zip"/>
</div>
</div>
<div class="wrapped-fields">
<div class="one-field">
    <label for="email" class="required">Email Address</label>
    <input type="text" id="email"/>
</div>
</div>
<div class="one-field">
    <input type="checkbox" id="subscribe" name="subscribe"/>
    <label for="subscribe">
        <span>
            <svg width="12px" height="10px" viewbox="0 0 12 10">
            <polyline points="1.5, 6, 4.5, 9, 10.5, 1"/>
            </svg>
        </span>
        <span>
            I'd like to receive email updates
        </span>
    </label>
</div>
<div class="one-field">
     <input type="submit"/>
<div>
</form>
